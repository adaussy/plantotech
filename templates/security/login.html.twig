{% block title %}Connecte toi :){% endblock %}
{% extends 'base.html.twig' %}
{% block body %}
    <div class="min-w-screen min-h-screen flex items-center justify-center px-5 py-5">
        <div class="p-10 xs:p-0 mx-auto md:w-full md:max-w-md">
            <div class="bg-white shadow w-full rounded-xl divide-y divide-gray-200">
                <div class="px-5 py-7">
                    <div class="w-full text-center mb-5">
                        <img src="{{ asset('build/img/login.svg') }}" alt="login" class="w-1/3 lg:w-1/4 inline">
                    </div>
                    <form action="{{ path('app_login') }}" method="post" class="login col-2">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                        <div class="flex -mx-3">
                            <div class="w-full px-3 mb-3">
                                <label for="password">E-mail ou nom d'utilisateur</label>
                                <div class="flex">
                                    <div class="ico"><i class="mdi mdi-account-outline"></i></div>
                                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="outline-none" placeholder="Rob1913"/>
                                </div>
                            </div>
                        </div>
                        <div class="flex -mx-3">
                            <div class="w-full px-3 mb-3">
                                <label for="password">Mot de passe</label>
                                <div class="flex">
                                    <div class="ico"><i class="mdi mdi-lock-outline"></i></div>
                                    <input required type="password" id="password" name="_password" placeholder="************" class="outline-none">
                                </div>
                            </div>
                        </div>
                        <label>
                            <input type="checkbox" class="checkbox border rounded-lg" value="_remember_me"> Se souvenir de moi
                        </label>
                        <button type="submit" class="btn btn--success w-full">
                            Login <i class="mdi mdi-arrow-right"></i>
                        </button>
                    </form>
                </div>
                <div class="py-5 text-center">
                    <a href="{{ path('app_oauth') }}" class="btn btn--secondary">{{ config('app/oauth_text') }}</a>
                </div>
                <div class="py-5">
                    <div class="grid grid-cols-2 gap-1">
                        <div class="text-center sm:text-left whitespace-nowrap">
                            <button data-href="{{ path('app_forgot_password') }}" class="transition duration-200 mx-5 px-5 py-4 cursor-pointer font-normal text-sm rounded-lg text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-200 focus:ring-2 focus:ring-gray-400 focus:ring-opacity-50 ring-inset">
                                <i class="mdi mdi-lock-open-outline"></i>
                                <span class="inline-block ml-1">Mot de passe oublié ?</span>
                            </button>
                        </div>
                        <div class="text-center sm:text-right  whitespace-nowrap">
