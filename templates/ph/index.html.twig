{% extends 'base.html.twig' %}

{% block title %}Ph index{% endblock %}

{% block body %}
    <h1>Ph index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ph in phs %}
            <tr>
                <td>{{ ph.id }}</td>
                <td>{{ ph.name }}</td>
                <td>
                    <a href="{{ path('ph_show', {'id': ph.id}) }}">show</a>
                    <a href="{{ path('ph_edit', {'id': ph.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ph_new') }}">Create new</a>
{% endblock %}
