<form method="post" action="{{ path('ph_delete', {'id': ph.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ph.id) }}">
    <button class="btn">Delete</button>
</form>
