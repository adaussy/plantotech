{% extends 'base.html.twig' %}

{% block title %}PlantFamily index{% endblock %}

{% block body %}
    <h1>PlantFamily index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plant_family in plant_families %}
            <tr>
                <td>{{ plant_family.id }}</td>
                <td>{{ plant_family.name }}</td>
                <td>
                    <a href="{{ path('plant_family_show', {'id': plant_family.id}) }}">show</a>
                    <a href="{{ path('plant_family_edit', {'id': plant_family.id}) }}">edit</a>
                </td>
            </tr>
