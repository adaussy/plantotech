{% extends 'base.html.twig' %}

{% block title %}Soil index{% endblock %}

{% block body %}
    <h1>Soil index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for soil in soils %}
            <tr>
                <td>{{ soil.id }}</td>
                <td>{{ soil.name }}</td>
                <td>
                    <a href="{{ path('soil_show', {'id': soil.id}) }}">show</a>
                    <a href="{{ path('soil_edit', {'id': soil.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('soil_new') }}">Create new</a>
{% endblock %}
