{% extends 'base.html.twig' %}

{% block head %}
    <link rel="canonical" href="{{ path('plant_show',{'id':plant.id,'slug':plant.slug}) }}" />
{% endblock %}
{% block stylesheets %}
{% endblock %}
{% block title %}{{ plant.LatinName }} - {{ plant.name }}{% endblock %}

{% block body %}

    <h1>{{ plant.LatinName }} - {{ plant.name }}</h1>
    {% if is_granted('ROLE_EDIT') %}<a href="{{ path('plant_edit',{'id':plant.id}) }}">üñäÔ∏è editer</a>{% endif %}
    {% if plant.Family %}
    <h2><a href="{{ path('plant_index',{'family':plant.Family.id}) }}">{{ plant.Family.Name }}</a></h2>
    {% else %}
        <h2 style="color: orange">Aucune famille sp√©cifi√©e</h2>
    {% endif %}
    <div class="grid-12-small-6 has-gutter-l">
        {% for family in families %}
        <div class="col-6">
            <h4>{{ family.name }}</h4>
            {% for child in family.children %}
                {% if child.name %}<h5>{{ child.name }}</h5>{% endif %}
                <ul class="unstyled">
                    {% for element in child.propertyOrAttributes %}
                        {% if element.attribute %}
                            {% include "attribute/_partial/line.html.twig" with {'attribute': element,'plant' : plant } %}
                        {% else %}
                            <li>
                                {% include element.templates('line') with {'property': element,'plant' : plant} %}
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            {% endfor %}
        </div>
        {% endfor %}
    </div>
{% endblock %}
