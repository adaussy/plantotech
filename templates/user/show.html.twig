{% extends 'base.html.twig' %}

{% block title %}User {{ user.username }}{% endblock %}

{% block body %}
    <h1 class="content-center text-center text-3xl p-5">Utilisateur {{ user.username }}</h1>

    <table class="table m-2">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td><a href="mailto:{{ user.email }}" class="hover:underline">{{ user.email }}</a></td>
            </tr>
        </tbody>
    </table>

    <div class="flex">
        <a class="btn btn--dark" href="{{ path('user_index') }}"><i class="mdi mdi-arrow-left"></i>Retour</a>
        <a class="btn btn--success" href="{{ path('user_edit', {'id': user.id}) }}"><i class="mdi mdi-pen"></i>edit</a>
    </div>


    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
